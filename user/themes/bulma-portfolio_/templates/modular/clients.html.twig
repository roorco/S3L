<!-- Clients Slider-->
<section class="section clients-slider">

    <div class="container">
        {{page.content}}
    </div>

    <div class='carousel is-2 carousel-animated carousel-animate-slide'>
        <div class='carousel-container'>
            {% for slide in page.header.slider %}   
                <div class="carousel-item is-active">
                    <figure class="image is-128x128 is-centered">
                        <img src="{{ page.media[slide.feature_img].url }}">
                    </figure>
                    <figcaption>    
                        <h1>{{ slide.feature_title }}</h1>
                        <p>{{ slide.feature_subtitle }}</p>
                        <p>
                            <a href="{{ slide.feature_link }}" class="arrow-btn">{{ slide.feature_link_text }}
                                <i class="fa fa-long-arrow-right"></i>
                            </a>
                        </p>
                    </figcaption>
                </div>
            {% endfor %}
        </div>
        <div class="carousel-navigation is-centered">
            <div class="carousel-nav-left">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
            </div>
            <div class="carousel-nav-right">
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
            </div>
        </div>
    </div>
    
</section>

