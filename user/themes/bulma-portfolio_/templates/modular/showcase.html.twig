<!-- Showcase -->
<section class="section has-carousel showcase">
  <div class="carousel carousel-animated carousel-animate-slide"  data-autoplay="true">
    <div class='carousel-container'>
        {% for item in page.header.showcase %}
        {% set item_active = loop.index == 1 ? 'is-active': '' %}
          <div class='carousel-item has-background {{ item_active }}'>
            <img class='is-background' src="{{ page.media[item.carousel_item].url }}" alt="{{ item.carousel_title }}" width="640" height="310"/>
            <div class="title">{{ item.carousel_title }}
              {% if item.carousel_link %}
                <a href="{{ item.carousel_link }}">More Info</a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
    </div>
    <div class="carousel-navigation is-overlay">
      <div class="carousel-nav-left">
        <i class="fa fa-chevron-left" aria-hidden="true"></i>
      </div>
      <div class="carousel-nav-right">
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
      </div>
    </div>
  </div>

</section>
  <section class="section page-content">
    <div class="container">
        {{ page.content }}

    </div>

</section>
